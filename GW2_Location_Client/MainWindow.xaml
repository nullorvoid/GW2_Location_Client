<Window x:Class="GW2_Location_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GW2 Location Sender" Height="160" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid Margin="0,0,0,0">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFE0E0E0" Offset="0"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox x:Name="txt_Api_Key" HorizontalAlignment="Left" Height="23" Margin="65,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" Grid.ColumnSpan="2"/>
        <Label Content="API Key" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Transmit" Content="Start Transmission" HorizontalAlignment="Left" Margin="223,95,0,0" VerticalAlignment="Top" Width="150" Click="Transmit_Click"/>
        <Label x:Name="lbl_Msg" Content="Message Label" HorizontalAlignment="Left" Margin="65,38,0,0" VerticalAlignment="Top" Width="308" Grid.ColumnSpan="2"/>
        <Label x:Name="lbl_debug" Content="Debug Information" HorizontalAlignment="Left" Margin="65,64,0,0" VerticalAlignment="Top" Width="319"/>

    </Grid>
</Window>
